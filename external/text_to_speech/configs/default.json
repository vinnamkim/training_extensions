{
    "logger": {
        "type": "TensorBoardLogger",
        "params": {
            "save_dir": "gan-tts",
            "name": "gan-tts-0"
        }
    },

    "trainer": {
        "lr": 0.0001,
        "training_steps": 100000,
        "forward_clip_grad_norm": true,
        "checkpoint_every": 10,
        "chkpt_dir": "chkpt/gan_tts_0",
        "batch_size": 35,
        "num_workers": 8,
        "max_epochs": 500
    },

    "data": {
        "training_path":"../../datasets/data_ljspeech_melgan",
        "cmudict_path": "data/cmu_dictionary",
        "text_cleaners":["english_cleaners"],
        "max_wav_value": 32768.0,
        "sampling_rate": 22050,
        "filter_length": 1024,
        "hop_length": 256,
        "win_length": 1024,
        "n_mel_channels": 80,
        "mel_fmin": 0.0,
        "mel_fmax": 8000.0,
        "add_noise": true,
        "tts_max_mel_len": 400,
        "add_blank": true
    },

    "model": {
        "add_blank": true,
        "extra_symbol": true,
        "encoder": {
            "embed_dims": 192,
            "num_chars": 0,
            "prenet_k": 6,
            "prenet_dims": 192,
            "highways": 4,
            "dropout": 0.3,
            "n_mels": 80,
            "window_size": 4
        },
        "decoder": {
            "hidden_channels": 192,
            "postnet_k": 10,
            "postnet_dims": 128,
            "highways": 4,
            "n_mels": 80,
            "window_size": 4
        }
    }
}
